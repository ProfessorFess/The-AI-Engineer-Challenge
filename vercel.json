{
  "version": 2,
  "builds": [
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/next"
    },
    { 
      "src": "api/hybrid.py", 
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "api/hybrid.py" 
    },
    { 
      "src": "/(.*)", 
      "dest": "frontend/$1"
    }
  ]
} 