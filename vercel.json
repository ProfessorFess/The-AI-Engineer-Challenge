{
  "version": 2,
  "builds": [
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    },
    { 
      "src": "api/app.py", 
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "api/app.py" 
    },
    { 
      "src": "/(.*)", 
      "dest": "frontend/$1"
    }
  ],
  "functions": {
    "api/app.py": {
      "maxDuration": 30
    }
  }
} 